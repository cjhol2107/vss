<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.KnwShrBoardAttachMapper">

	<insert id="knwShr_insert">
		insert into TBL_ATTACH_KNW_SHR (uuid, uploadpath, filename,
		filetype, bno)
		values (#{uuid}, #{uploadPath}, #{fileName},
		#{fileType}, #{bno} )
	</insert>

	<delete id="knwShr_delete">

		delete from TBL_ATTACH_KNW_SHR where uuid = #{uuid}

	</delete>

	<select id="knwShr_findByBno"
		resultType="org.zerock.domain.BoardAttachVO">
		select * from TBL_ATTACH_KNW_SHR where bno = #{bno}
	</select>

	<delete id="knwShr_deleteAll">

		delete TBL_ATTACH_KNW_SHR where bno = #{bno}

	</delete>

	<select id="knwShr_getOldFiles"
		resultType="org.zerock.domain.BoardAttachVO">

		select * from TBL_ATTACH_KNW_SHR where uploadpath = to_char(sysdate -1 ,'yyyy\mm\dd')

	</select>


</mapper>
